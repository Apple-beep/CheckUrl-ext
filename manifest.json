{
    "manifest_version": 2,
    "name": "Check URL - Real-time Malicious Link Scanner",
    "version": "1.1.0",
    "description": "Automatically scans and highlights malicious links on web pages with real-time warnings before you click",
    
    "permissions": [
      "activeTab",
      "storage",
      "notifications",
      "https://*/*",
      "http://*/*",
      "tabs"
    ],
    
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "css": ["content.css"],
        "run_at": "document_end",
        "all_frames": true
      }
    ],
    
    "browser_action": {
      "default_popup": "popup.html",
      "default_title": "Check URL - Real-time Scanner",
      "default_icon": {
        "16": "icons/icon-16.png",
        "32": "icons/icon-32.png",
        "48": "icons/icon-48.png",
        "128": "icons/icon-128.png"
      }
    },
    
    "icons": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    },
    
    "web_accessible_resources": [
      "icons/*.png"
    ],
    
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
  }